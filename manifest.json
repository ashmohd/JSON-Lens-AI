{
  "manifest_version": 3,
  "name": "JSON Lens AI",
  "version": "1.0",
  "description": "A Chrome extension to view, understand, and query JSON data with AI-powered insights.",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon16.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
