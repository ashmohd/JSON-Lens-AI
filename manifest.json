{
  "manifest_version": 3,
  "name": "JSON Lens AI",
  "description": "Blazing-fast JSON viewer with built-in AI that summarises, queries & explains your data â€” 100 % open source.",
  "version": "0.0.4",

  "icons": {
    "16":  "icons/16.png",
    "48":  "icons/48.png",
    "128": "icons/128.png"
  },

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_title": "JSON Lens AI",
    "default_popup": "popup.html",
    "default_icon": {
      "16":  "icons/16.png",
      "48":  "icons/48.png",
      "128": "icons/128.png"
    }
  },

  "homepage_url": "https://github.com/ashmohd/JSON-Lens-AI"
}
